/* pages/virtualCard/reportLoss/reportLoss.wxss */
page{
  width: 100%;
  height: 100%;
}
.global{
  width: 100%;
  height: 100%;
  position: absolute;
  background-size: cover;
  display: inline-block;
  /* background-image: linear-gradient(to bottom right,#244b79,#9cc2e8); */
  background-image: linear-gradient(to bottom right,rgb(33,81,117),rgb(168,208,237));
}

.card{
  display: inline-block;
  height: 70%;
  width: 85%;
  margin-left: 7.5%;
  margin-top: 20%;
  margin-bottom: 5%;
  border-radius: 20rpx; 
  color:black;
}
.card .card-image{
  z-index: 1;
  height: 40%;
  width: 100%;
  border-radius: 20rpx; 
  position: relative;
}
.card .main-card-image{
  height: 100%;
  width: 100%;
  border-radius: 20rpx;
  box-shadow: 6px 6px 10px 0px rgb(33,81,117);
}

.card .card-content{
  line-height: 20rpx;
  width: 95%;
  height: 40%;
  margin-left: 2.5%;
  border-bottom-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  background-color: rgb(103, 140, 166);
  box-shadow: 3px 3px 10px 0px rgb(33,81,117);
  z-index: -1;
}
.card .card-content .card-content-textblock{
  text-align: center;
  position: relative;
  margin-left: 15%;
  margin-top: 1%;
  padding-top: 1%;
  width: 70%;
  height: 30%;
  box-shadow: 3px 3px 10px 0px rgb(33,81,117);
  background-color: rgb(63, 72, 111);
  font-weight: bolder;
  color: #58B2DC;
  border-radius: 45rpx;
  font-size: 40rpx;
}
.card-button {
    margin-left: 25%;
    color: #244b79;
    font-weight: bolder;
    background-color:rgb(178,218,244);/*#58B2DC;*/
    border-radius: 30rpx;
    width: 50%;
    height: 20%;
    box-shadow: 3px 3px 10px 0px rgb(33,81,117);
    margin-top: 3%;
}
.card .card-content .ttitle{
  padding-top: 5%;
  text-align: center;
  padding-left: 20rpx;
  height: 25%;
  width: 100%;
  color: #a1c6df;
  font-size: 50rpx;
  font-weight: bolder;
  display: inline-block;
}

.card .slogan{
  padding-top: 20%;
  width: 100%;
  height: 20%;
  font-style: italic;
  text-shadow: 2px 2px 2px rgb(33,81,117);
  color: #a1c6df;
}

.card .card-content .card-content-title{
  height: 40rpx;
  font-size: 30rpx;
  line-height: 40rpx;
}

input {
    text-align: center;
    margin-top: 2%;
    margin-left: 5%;
    width: 90%;
    height: 5%;
    background-color: #a1c6df;
    border-radius: 25rpx;
    font-size: 30rpx;

}

